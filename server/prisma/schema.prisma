// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:recipes.sqlite"
}

//  TODO: add steps and pictures to recipe

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id        Int      @default(autoincrement()) @id
  title String
  ingredients String
  background String?
  name String?
  email String?
  imageIds String?
}
